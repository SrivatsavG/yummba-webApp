                <!-- </div> -->
                <div class="nutrition edit-product-form-control">
                    <label for="servingSize">Serving Size</label>
                    <input type="number" name="servingSize" id="servingSize" step="0.1"
                        value="<% if (editing) { %><%= product.servingSize %><% } %>">

                    <label for="calories">Calories</label>
                    <input type="number" name="calories" id="calories" step="0.1"
                        value="<% if (editing) { %><%= product.calories %><% } %>">

                    <label for="totalFat">Total Fat</label>
                    <input type="number" name="totalFat" id="totalFat" step="0.1"
                        value="<% if (editing) { %><%= product.totalFat %><% } %>">

                    <label for="saturatedFat">Saturated Fat</label>
                    <input type="number" name="saturatedFat" id="saturatedFat" step="0.1"
                        value="<% if (editing) { %><%= product.saturatedFat %><% } %>">

                    <label for="transFat">Trans Fat</label>
                    <input type="number" name="transFat" id="transFat" step="0.1"
                        value="<% if (editing) { %><%= product.transFat %><% } %>">

                    <label for="cholestoral">Cholesterol</label>
                    <input type="number" name="cholestoral" id="cholestoral" step="0.1"
                        value="<% if (editing) { %><%= product.cholestoral %><% } %>">

                    <label for="sodium">Sodium</label>
                    <input type="number" name="sodium" id="sodium" step="0.1"
                        value="<% if (editing) { %><%= product.sodium %><% } %>">

                    <label for="totalCarbohydrate">Total Carbohydrate</label>
                    <input type="number" name="totalCarbohydrate" id="totalCarbohydrate" step="0.1"
                        value="<% if (editing) { %><%= product.totalCarbohydrate %><% } %>">

                    <label for="dietaryFiber">Dietary Fiber</label>
                    <input type="number" name="dietaryFiber" id="dietaryFiber" step="0.1"
                        value="<% if (editing) { %><%= product.dietaryFiber %><% } %>">

                    <label for="fruitSugar">Natural Fruit Sugar</label>
                    <input type="number" name="fruitSugar" id="fruitSugar" step="0.1"
                        value="<% if (editing) { %><%= product.fruitSugar %><% } %>">

                    <label for="protein">Protein</label>
                    <input type="number" name="protein" id="protein" step="0.1"
                        value="<% if (editing) { %><%= product.protein %><% } %>">

                    <label for="calcium">Calcium</label>
                    <input type="number" name="calcium" id="calcium" step="0.1"
                        value="<% if (editing) { %><%= product.calcium %><% } %>">

                    <label for="iron">Iron</label>
                    <input type="number" name="iron" id="iron" step="0.1"
                        value="<% if (editing) { %><%= product.iron %><% } %>">

                    <label for="potassium">Potassium</label>
                    <input type="number" name="potassium" id="potassium" step="0.1"
                        value="<% if (editing) { %><%= product.potassium %><% } %>">
                </div>

                <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
                <% } %>
                <input type="hidden" name='_csrf' value="<%= csrfToken %>">
                <button class="edit-product-btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add
                    Product<% } %></button>
