                    <input type="text" name="title" id="title" value="<% if (editing) { %><%= product.title %><% } %>">
                </div>
                <div class="edit-product-form-control">
                    <label for="image">Image</label>
                    <select name="image" id="image" size="6" value="<% if (editing) { %><%= product.image %><% } %>">
                        <option value="blueberry_white">Blueberry</option>
                        <option value="cinnamon_white">Cinnamon</option>
                        <option value="cocoa_white">Cocoa</option>
                        <option value="coffee_white">Coffee</option>
