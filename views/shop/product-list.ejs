<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/addToCart.css">


</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <%if(message != null) {%>
    <div id="addedToCart">
        <%= message %>
    </div>
    <% } %>

    <main>
        <% if (prods.length > 0) { %>
        <div class="grid">
            <% for (let product of prods) { %>

            <article class="card product-item">
                <!-- <header class="card__header">
                        <h1 class="product__title">
                            <%= product.title %>
                        </h1>
                    </header> -->
                <a href="/products/<%= product._id %>">
                    <div class="card__image">
                        <img src="https://s3.us-east-2.amazonaws.com/yummba.in/productimages/<%= product.image %>.png"
                            alt="<%= product.title %>">
                    </div>
                </a>

                <div class="card__content">
                    <p class="product__price">Rs
                        <%= product.price %>
                    </p>
                    <!-- <p class="product__description">
                            <%= product.description %>
                        </p> -->
                </div>
                <div class="row card__actions d-flex justify-content-between">
                    <!-- <div class="col">
                            <a href="/products/<%= product._id %>" class="btn"><i class="fas fa-info-circle"></i></a>
                        </div> -->
                    <div class="col">
                        <!-- <% if (isAuthenticated) { %>
                            <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                            <% } %> -->
                        <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                    </div>
                </div>
            </article>


            <% } %>
        </div>
        <% } else { %>
        <h1>No Products Found!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>