<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/orders.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (orders.length <= 0) { %>
        <h1 id="noOrder">You have not placed an order yet.</h1>
        <% } else { %>
        <div id="ordersContainer">
            <div class="row d-flex justify-content-around centered">
                <div id="imageCol" class="col col-md-6">
                    <img id="ordersImage" src="/images/webpage_images/orders.png">
                </div>
                <div class="col col-md-6">
                    <ul class="ordersList">
                        <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <p>Order id: <%= order._id %> - <a href='/orders/<%= order._id %>'>Invoice</a> </p>
                            <ul class="orders__products">
                                <% order.products.forEach(p => { %>
                                <li class="orders__products-item"><%= p.product.title %> (<%= p.quantity %>)</li>
                                <% }); %>
                            </ul>
                        </li>
                        <% }); %>
                    </ul>
                </div>

            </div>
        </div>

        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>