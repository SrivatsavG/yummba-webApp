<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errorMessage){ %>
        <div class="user-message user-message--error"> <%= errorMessage %> </div>
        <% } %>
        <div id="signup-container" class="row container d-flex justify-content-between">
            <div id="signup-text" class="col col-12 col-sm-12 col-md-6">
                Come join the Yummba! community. Let's set up your free account in a few seconds.
            </div>
            <div class="col signup-form-container roundedCorner container">
                <form class="login-form" action="/signup" method="POST">
                    <!-- NEW -->
                    <div class="form-control">
                        <label for="username">Username</label>
                        <input class="login-input" type="text" name="username" id="username"
                            value="<%=oldInput.username%>" placeholder="tonystark">
                    </div>
                    <div class="form-control">
                        <label for="email">E-Mail</label>
                        <input
                            class="login-input <%= validationErrors.find ( error => error.param === 'email') ? 'invalid' : '' %>"
                            type="email" name="email" id="email" value="<%=oldInput.email%>" placeholder="tonystark@hotmail.com">
                    </div>
                    <div class="form-control">
                        <label for="password">Password</label>
                        <input
                            class="login-input <%= validationErrors.find ( error => error.param === 'password') ? 'invalid' : '' %>"
                            type="password" name="password" id="password" value="<%=oldInput.password%>" placeholder="Use atleast 8 characters...">
                    </div>
                    <div class="form-control">
                        <label for="confirmPassword">Confirm Password</label>
                        <input
                            class="login-input <%= validationErrors.find ( error => error.param === 'confirmPassword') ? 'invalid' : '' %>"
                            type="password" name="confirmPassword" id="confirmPassword" value="<%=oldInput.password%>">
                    </div>
                    <input type="hidden" name='_csrf' value="<%= csrfToken %>">
                    <button class="btn" type="submit">Signup</button>
                </form>

            </div>

        </div>

    </main>
    <%- include('../includes/end.ejs') %>